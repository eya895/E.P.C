@page
@model RegisterModel
@{
    ViewData["Title"] = "Create Account";
}

<div class="epc-login-page">
    <div class="login-card">
        <div class="login-header">
            <i class="bi bi-person-plus brand-icon"></i>
            <h2 class="login-title">Join E.P.C</h2>
            <p class="login-subtitle">Start building your dream PC</p>
        </div>

        <form id="registerForm" method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="error-msg"></div>

            <!-- EMAIL -->
            <div class="input-field">
                <label asp-for="Input.Email">Email Address</label>
                <input asp-for="Input.Email" placeholder="name@example.com" autocomplete="username" />
                <span asp-validation-for="Input.Email" class="val-text"></span>
            </div>

            <!-- PASSWORD -->
            <div class="input-field">
                <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" type="password" placeholder="••••••••" autocomplete="new-password" />
                <span asp-validation-for="Input.Password" class="val-text"></span>
            </div>

            <!-- CONFIRM PASSWORD -->
            <div class="input-field">
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <input asp-for="Input.ConfirmPassword" type="password" placeholder="••••••••" autocomplete="new-password" />
                <span asp-validation-for="Input.ConfirmPassword" class="val-text"></span>
            </div>

            <button id="registerSubmit" type="submit" class="submit-btn">CREATE ACCOUNT</button>
        </form>

        <p class="footer-text">
            Already a member? <a asp-page="./Login">Log In</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* זהה לחלוטין לעיצוב הלוגין שלך */
    html, body {
        height: 100%;
        margin: 0;
        overflow: hidden;
        background: #0b0f19;
    }

    .epc-login-page {
        height: calc(100vh - 60px);
        display: flex;
        align-items: center;
        justify-content: center;
        background: radial-gradient(circle at center, #1a2235 0%, #0b0f19 100%);
        color: white;
        font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    }

    .login-card {
        background: rgba(22, 30, 46, 0.95);
        border: 1px solid rgba(0, 242, 254, 0.2);
        border-radius: 16px;
        padding: 2rem;
        width: 100%;
        max-width: 380px;
        box-shadow: 0 20px 40px rgba(0,0,0,0.4);
        text-align: center;
    }

    .brand-icon {
        font-size: 2rem;
        color: #00f2fe;
        margin-bottom: 0.5rem;
        display: block;
    }

    .login-title {
        font-size: 1.5rem;
        margin: 0;
        font-weight: 700;
        letter-spacing: 0.5px;
    }

    .login-subtitle {
        color: #64748b;
        font-size: 0.85rem;
        margin-bottom: 1.2rem;
    }

    .input-field {
        text-align: left;
        margin-bottom: 0.8rem;
    }

        .input-field label {
            display: block;
            font-size: 0.7rem;
            color: #00f2fe;
            margin-bottom: 4px;
            font-weight: 600;
            text-transform: uppercase;
        }

        .input-field input {
            width: 100%;
            background: rgba(10, 15, 26, 0.8);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 8px;
            padding: 10px 12px;
            color: white;
            font-size: 0.9rem;
            outline: none;
        }

            .input-field input:focus {
                border-color: #00f2fe;
                box-shadow: 0 0 8px rgba(0, 242, 254, 0.2);
            }

    .submit-btn {
        width: 100%;
        background: linear-gradient(90deg, #00f2fe, #4facfe);
        color: #0b0f19;
        border: none;
        padding: 12px;
        border-radius: 8px;
        font-weight: 800;
        cursor: pointer;
        transition: 0.2s;
        margin-top: 1rem;
    }

        .submit-btn:hover {
            opacity: 0.9;
            transform: translateY(-1px);
        }

    .footer-text {
        margin-top: 1.2rem;
        font-size: 0.85rem;
        color: #64748b;
    }

        .footer-text a {
            color: #00f2fe;
            text-decoration: none;
            font-weight: bold;
        }

    footer {
        display: none !important;
    }

    .val-text {
        color: #ff4d4d;
        font-size: 0.65rem;
        display: block;
        margin-top: 2px;
    }

    .error-msg {
        color: #ff4d4d;
        font-size: 0.8rem;
        margin-bottom: 10px;
    }
</style>
