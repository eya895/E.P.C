@model E.P.C.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

@if (Model is GPU gpu)
{
    <div class="container mt-4">
        <div class="row">

            <!-- IMAGE -->
            <div class="col-md-5">
                <img src="@gpu.ImageUrl"
                class="img-fluid"
                alt="@gpu.Model" />
            </div>

            <!-- DETAILS -->
            <div class="col-md-7">

                <h2 class="fw-bold">@gpu.Brand @gpu.Model</h2>
                <p class="text-muted">Graphics Card</p>

                <table class="table table-striped table-borderless mt-3">
                    <tbody>
                        <tr>
                            <th>Memory</th>
                            <td>@gpu.MemorySize GB (@gpu.MemoryType)</td>
                        </tr>
                        <tr>
                            <th>Core Clock</th>
                            <td>@gpu.CoreClock MHz</td>
                        </tr>
                        <tr>
                            <th>Boost Clock</th>
                            <td>@gpu.BoostClock MHz</td>
                        </tr>
                        <tr>
                            <th>TDP</th>
                            <td>@gpu.TDP W</td>
                        </tr>
                        <tr>
                            <th>Interface</th>
                            <td>@gpu.Interface</td>
                        </tr>
                        <tr>
                            <th>Dimensions</th>
                            <td>@gpu.dimensions</td>
                        </tr>
                        <tr>
                            <th>Ports</th>
                            <td>@gpu.Ports</td>
                        </tr>
                    </tbody>
                </table>

                <h3 class="text-success fw-bold mt-3">@gpu.Price₪</h3>

                <div class="d-flex gap-2 mt-3">
                    <a asp-action="Index"
                    class="btn btn-outline-dark">
                        ← Back to List
                    </a>

                    @if (!User.IsInRole("Admin"))
                    {
                        <form asp-controller="ShoppingCart"
                        asp-action="Add"
                        method="post">
                            <input type="hidden" name="itemId" value="@gpu.Id" />
                            <button type="submit"
                            class="btn btn-success">
                                Add to Cart 🛒
                            </button>
                        </form>
                    }
                </div>

            </div>
        </div>
    </div>
}
@if (Model is CPU cpu)
