@model E.P.C.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<div class="edit-form-container">

    <h1>Edit Product</h1>
    <hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />

        @* Dynamically generate inputs for all public properties except Id *@
        <div class="form-grid">
            @foreach (var prop in Model.GetType().GetProperties())
            {
                if (prop.Name == "Id") continue;

                <div class="form-group">
                    <label>@System.Text.RegularExpressions.Regex.Replace(prop.Name, "([a-z])([A-Z])", "$1 $2")</label>
                    <input type="text"
                           name="@prop.Name"
                           value="@(prop.GetValue(Model) ?? "")"
                           class="form-control" />
                </div>
            }
        </div>

        <div class="form-group mt-4">
            <input type="submit" value="Save Changes" />
        </div>
    </form>

    <div class="mt-3">
        <a asp-action="Index">← Back to Products</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /* ---------- CONTAINER ---------- */
    .edit-form-container {
        max-width: 1200px;
        margin: 40px auto;
        padding: 40px;
        background: rgba(10, 15, 26, 0.95);
        border-radius: 18px;
        border: 1px solid rgba(0, 242, 254, 0.15);
        box-shadow: 0 5px 25px rgba(0, 242, 254, 0.2); /* gentle neon glow */
        font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
        color: #00f2fe;
    }

        /* ---------- HEADER ---------- */
        .edit-form-container h1 {
            color: #00f2fe;
            font-weight: 700;
            margin-bottom: 20px;
            text-shadow: 0 0 6px rgba(0, 242, 254, 0.7); /* neon glow */
        }

    hr {
        border-color: rgba(0, 242, 254, 0.25);
    }

    /* ---------- FORM GRID ---------- */
    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 20px;
    }

    /* ---------- FORM GROUP ---------- */
    .form-group {
        display: flex;
        flex-direction: column;
    }

        .form-group label {
            font-weight: 600;
            margin-bottom: 6px;
            color: #00f2fe;
            text-shadow: 0 0 4px rgba(0, 242, 254, 0.6); /* subtle glow */
        }

    .form-control {
        padding: 10px 12px;
        border-radius: 8px;
        border: 1px solid rgba(0, 242, 254, 0.25);
        background: rgba(10, 15, 26, 0.85);
        color: #00f2fe;
        transition: 0.25s;
        box-shadow: 0 0 6px rgba(0, 242, 254, 0.1); /* subtle input glow */
    }

        .form-control:focus {
            border-color: #00f2fe;
            box-shadow: 0 0 10px rgba(0, 242, 254, 0.25); /* slightly stronger glow on focus */
            outline: none;
        }

    /* ---------- SUBMIT BUTTON ---------- */
    input[type="submit"] {
        background: linear-gradient(90deg, #00f2fe, #4facfe);
        color: #0b0f19;
        font-weight: 700;
        padding: 14px 24px;
        border-radius: 10px;
        border: none;
        box-shadow: 0 0 12px rgba(0, 242, 254, 0.3); /* neon glow */
        cursor: pointer;
        transition: 0.25s;
    }

        input[type="submit"]:hover {
            transform: scale(1.02);
            box-shadow: 0 0 18px rgba(0, 242, 254, 0.45); /* slightly stronger on hover */
        }

    /* ---------- BACK LINK ---------- */
    .edit-form-container a {
        color: #00f2fe;
        font-weight: 600;
        text-decoration: none;
    }

        .edit-form-container a:hover {
            text-decoration: underline;
        }

    /* ---------- VALIDATION ---------- */
    .text-danger {
        color: #ff4d4d;
        font-size: 0.9rem;
        text-shadow: 0 0 3px rgba(255, 77, 77, 0.5); /* red neon glow */
    }
</style>
