@model E.P.C.Models.AIO

@{
    ViewData["Title"] = "Edit Product";
}

<div class="edit-form-container">

    <h1>Edit Product</h1>
    <hr />

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />

        <div class="form-grid">

            @foreach (var prop in Model.GetType().GetProperties())
            {
                if (prop.Name == "Id") continue;

                var value = prop.GetValue(Model)?.ToString();
                var labelText = System.Text.RegularExpressions.Regex.Replace(prop.Name, "([a-z])([A-Z])", "$1 $2");

                <div class="form-group">

                    <label>@labelText</label>

                    @if (prop.Name == "SupportedSockets")
                    {
                        var selectedSockets = value?
                        .Split(',', StringSplitOptions.RemoveEmptyEntries)
                        .Select(s => s.Trim())
                        .ToList() ?? new List<string>();

                        var sockets = new List<string>
                                {
                                "LGA1200","LGA1700","LGA1851",
                                "LGA1150","LGA1151","LGA1155","LGA1156",
                                "LGA2066","LGA4677",
                                "STRx4","STR4","STR5",
                                "AM4","AM5"
                                };

                        <div class="socket-checkboxes">
                            @foreach (var socket in sockets)
                            {
                                var isChecked = selectedSockets.Contains(socket);

                                <label class="socket-label">
                                    <input type="checkbox"
                                           name="SupportedSockets"
                                           value="@socket"
                                           @(isChecked ? "checked" : "") />
                                    @socket
                                </label>
                            }
                        </div>
                    }
                    else
                    {
                        <input type="text"
                               name="@prop.Name"
                               value="@(value ?? "")"
                               class="form-control" />
                    }
                </div>
            }

        </div>

        <div class="form-group mt-4">
            <input type="submit" value="Save Changes" />
        </div>
    </form>

    <div class="mt-3">
        <a asp-action="Index">← Back to Products</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
