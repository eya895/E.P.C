@model E.P.C.Models.Product

@{
    ViewData["Title"] = "Create";
}

<div class="create-page">
    <h1 class="create-title">Add a New Product</h1>

    <div class="circle-grid">
        <div class="circle-item">
            <span class="circle-title">GPU</span>
            <a class="circle" asp-controller="GPUs" asp-action="Create">
                <img src="~/images/E.P.C.GPU.jpg" alt="GPU">
            </a>
        </div>

        <div class="circle-item">
            <span class="circle-title">CPU</span>
            <a class="circle" asp-controller="CPUs" asp-action="Create">
                <img src="~/images/E.P.C.CPU.jpg" alt="CPU">
            </a>
        </div>

        <div class="circle-item">
            <span class="circle-title">PSU</span>
            <a class="circle" asp-controller="PSUs" asp-action="Create">
                <img src="~/images/E.P.C.PSU.jpg" alt="PSU">
            </a>
        </div>

        <div class="circle-item">
            <span class="circle-title">AIO</span>
            <a class="circle" asp-controller="AIOs" asp-action="Create">
                <img src="~/images/E.P.C.AIO.jpg" alt="AIO">
            </a>
        </div>

        <div class="circle-item">
            <span class="circle-title">RAM</span>
            <a class="circle" asp-controller="RAMs" asp-action="Create">
                <img src="~/images/E.P.C.RAM.jpg" alt="RAM">
            </a>
        </div>

        <div class="circle-item">
            <span class="circle-title">Case</span>
            <a class="circle" asp-controller="Cases" asp-action="Create">
                <img src="~/images/E.P.C.Case.jpg" alt="Case">
            </a>
        </div>

        <div class="circle-item">
            <span class="circle-title">CPU Fan</span>
            <a class="circle" asp-controller="CPUFans" asp-action="Create">
                <img src="~/images/E.P.C.CPUFan.jpg" alt="CPU Fan">
            </a>
        </div>

        <div class="circle-item">
            <span class="circle-title">Fan</span>
            <a class="circle" asp-controller="Fans" asp-action="Create">
                <img src="~/images/E.P.C.Fan.jpg" alt="Fan">
            </a>
        </div>

        <div class="circle-item">
            <span class="circle-title">Motherboard</span>
            <a class="circle" asp-controller="MotherBoards" asp-action="Create">
                <img src="~/images/E.P.C.motherboard.jpg" alt="Motherboard">
            </a>
        </div>

        <div class="circle-item">
            <span class="circle-title">Storage</span>
            <a class="circle" asp-controller="Storages" asp-action="Create">
                <img src="~/images/E.P.C.storage.png" alt="Storage">
            </a>
        </div>
    </div>

    <div class="back-btn">
        <a class="btn neon-back" asp-action="Index">Back to List</a>
    </div>
</div>

<style>
    /* HARD STOP for page scrolling */
    html, body {
        margin: 0;
        padding: 0;
        overflow: hidden;
    }

    .create-page {
        min-height: calc(100vh - 90px);
        box-sizing: border-box;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 40px;
        padding: 40px 20px;
        background: radial-gradient(circle at center, #1a2235 0%, #0b0f19 100%);
        color: white;
    }

    .create-title {
        font-size: 2.5rem;
        letter-spacing: 2px;
        text-shadow: 0 0 12px rgba(0, 242, 254, 0.4);
    }

    .circle-grid {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 25px;
        width: 100%;
        max-width: 1100px;
        justify-items: center;
    }

    .circle-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 12px;
    }

    .circle-title {
        font-weight: 800;
        letter-spacing: 1px;
        text-transform: uppercase;
        font-size: 0.9rem;
        color: white;
        text-shadow: 0 0 10px rgba(0, 242, 254, 0.6);
    }

    /* ORIGINAL NEON CIRCLE — UNCHANGED */
    .circle {
        width: 160px;
        height: 160px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        text-decoration: none;
        background: radial-gradient( circle at center, rgba(0, 242, 254, 0.25), rgba(79, 172, 254, 0.1) );
        box-shadow: 0 0 20px rgba(0, 242, 254, 0.45);
        border: 2px solid rgba(0, 242, 254, 0.4);
        transition: transform 0.2s ease, box-shadow 0.2s ease, border-color 0.2s ease;
        background:white;
    }

        .circle img {
            width: 90%;
            height: 90%;
            object-fit: cover;
        }

        .circle:hover {
            transform: translateY(-6px);
            box-shadow: 0 0 35px rgba(0, 242, 254, 0.8);
            border-color: rgba(0, 242, 254, 0.9);
        }

    .back-btn {
        margin-top: 10px;
    }

    .neon-back {
        background: linear-gradient(90deg, #00f2fe, #4facfe);
        color: #0b0f19;
        font-weight: 900;
        border-radius: 50px;
        padding: 12px 28px;
        box-shadow: 0 0 25px rgba(0, 242, 254, 0.5);
        text-decoration: none;
    }

        .neon-back:hover {
            transform: translateY(-2px);
            box-shadow: 0 0 40px rgba(0, 242, 254, 0.8);
        }

    @@media (max-width: 1200px) {
        .circle-grid {
            grid-template-columns: repeat(4, 1fr);
        }
    }

    @@media (max-width: 900px) {
        .circle-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    @@media (max-width: 650px) {
        .circle-grid {
            grid-template-columns: repeat(2, 1fr);
        }

        .circle {
            width: 140px;
            height: 140px;
        }
    }
</style>
