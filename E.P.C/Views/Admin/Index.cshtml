@{
    ViewData["Title"] = "Admin Dashboard";
    ViewData["FullWidth"] = true;
}

<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold dashboard-title">Admin Dashboard</h1>
        <p class="ls-2 text-uppercase">Store Management & Analytics</p>
    </div>

    <div class="row g-4 justify-content-center">
        <!-- Manage Products Card -->
        <div class="col-md-5">
            <a asp-controller="Products" asp-action="Index" class="admin-card h-100">
                <div class="card-image-wrapper">
                    <img src="~/Images/E.P.C.comps.jpg" class="admin-img" alt="Products">
                    <div class="overlay"></div>
                </div>
                <div class="card-body text-center p-4">
                    <h3>Manage Products</h3>
                    <p>Update your product catalog</p>
                    <span class="admin-btn">Enter Manager</span>
                </div>
            </a>
        </div>

        <!-- All Carts Card -->
        <div class="col-md-5">
            <a asp-controller="AdminCarts" asp-action="Index" class="admin-card h-100">
                <div class="card-image-wrapper">
                    <img src="~/Images/E.P.C.cart.jpg" class="admin-img" alt="Carts">
                    <div class="overlay"></div>
                </div>
                <div class="card-body text-center p-4">
                    <h3>All Carts</h3>
                    <p>Monitor all customer carts</p>
                    <span class="admin-btn">View All Carts</span>
                </div>
            </a>
        </div>
    </div>
</div>

<style>
    /* ---------- ADMIN DASHBOARD (NEON STYLE) ---------- */

    :root {
        --neon-main: #00f2fe;
        --neon-alt: #4facfe;
        --bg-dark: #0b0f19;
        --bg-card: rgba(22, 30, 46, 0.95);
        --text-muted-neon: #64748b;
    }

    body {
        background: radial-gradient(circle at center, #1a2235 0%, #0b0f19 100%);
        color: white;
        font-family: 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
    }

    /* TITLES */
    .dashboard-title {
        color: white;
        letter-spacing: 0.5px;
        text-shadow: 0 0 12px rgba(0, 242, 254, 0.35);
    }

    .ls-2 {
        letter-spacing: 1.5px;
        font-size: 1.25rem;
        color: lightgray;
        text-shadow: 0 0 12px rgba(0, 242, 254, 0.50);
    }

    /* ---------- CARDS ---------- */

    .admin-card {
        background: var(--bg-card);
        border-radius: 20px;
        border: 1px solid rgba(0, 242, 254, 0.25);
        box-shadow: 0 20px 50px rgba(0,0,0,0.6);
        text-decoration: none;
        color: white;
        overflow: hidden;
        transition: 0.35s ease;
        display: block;
    }

        .admin-card:hover {
            transform: translateY(-10px) scale(1.02);
            box-shadow: 0 0 40px rgba(0, 242, 254, 0.6);
            color: white;
        }

    /* IMAGE */
    .card-image-wrapper {
        position: relative;
        height: 200px;
        overflow: hidden;
    }

    .admin-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(0.8);
        transition: transform 0.6s ease;
    }

    .admin-card:hover .admin-img {
        transform: scale(1.1);
    }

    /* IMAGE OVERLAY */
    .overlay {
        position: absolute;
        inset: 0;
        background: linear-gradient( to bottom, rgba(11,15,25,0.2), rgba(11,15,25,0.85) );
    }

    /* CARD BODY */
    .card-body h3 {
        font-weight: 800;
        margin-bottom: 0.6rem;
    }

    .card-body p {
        color: var(--text-muted-neon);
        font-size: 0.9rem;
    }

    /* ---------- NEON BUTTON ---------- */

    .admin-btn {
        display: inline-block;
        margin-top: 1rem;
        padding: 10px 30px;
        border-radius: 50px;
        background: linear-gradient(90deg, var(--neon-main), var(--neon-alt));
        color: #0b0f19;
        font-weight: 900;
        text-decoration: none;
        box-shadow: 0 0 25px rgba(0, 242, 254, 0.45);
        transition: 0.25s ease;
    }

        .admin-btn:hover {
            transform: translateY(-2px) scale(1.05);
            box-shadow: 0 0 40px rgba(0, 242, 254, 0.8);
            color: #0b0f19;
        }
</style>
