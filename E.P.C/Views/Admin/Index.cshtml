<div class="container py-5">
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold dashboard-title">Admin Dashboard</h1>
        <p class="text-muted text-uppercase ls-2">Store Management & Analytics</p>
    </div>

    <div class="row g-4 justify-content-center">
        <!-- Manage Products Card -->
        <div class="col-md-5">
            <a asp-controller="Products" asp-action="Index" class="card admin-card h-100 shadow-sm border-0">
                <div class="card-image-wrapper">
                    <!-- תמונה לבחירתך עבור מוצרים -->
                    <img src="~/Images/E.P.C.comps.jpg" class="admin-img"  alt="Products">
                    <div class="overlay"></div>
                </div>
                <div class="card-body text-center p-4">
                    <div class="mb-3"></div>
                    <h3 class="fw-bold">Manage Products</h3>
                    <p class="text-muted">Edit prices, add stock, and update your product catalog.</p>
                    <span class="btn btn-primary rounded-pill px-4">Enter Manager</span>
                </div>
            </a>
        </div>

        <!-- All Carts Card -->
        <div class="col-md-5">
            <a asp-controller="AdminCarts" asp-action="Index" class="card admin-card h-100 shadow-sm border-0">
                <div class="card-image-wrapper">
                    <!-- תמונה של עגלה/מכירות -->
                    <img src="~/Images/E.P.C.cart.jpg" class="admin-img" alt="Carts">
                    <div class="overlay"></div>
                </div>
                <div class="card-body text-center p-4">
                    <div class="mb-3"></div>
                    <h3 class="fw-bold">All Carts</h3>
                    <p class="text-muted">Monitor active customer carts and analyze sales trends.</p>
                    <span class="btn btn-success rounded-pill px-4">View All Carts</span>
                </div>
            </a>
        </div>
    </div>
</div>

