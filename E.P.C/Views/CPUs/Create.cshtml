@model E.P.C.Models.CPU

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CPU</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="Brand">Brand</label>
                <select id="Brand" name="Brand">
                    <option value="Intel">Intel</option>
                    <option value="AMD">AMD</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Model" class="control-label">Model:</label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cores" class="control-label">Number Of Cores:</label>
                <input asp-for="Cores" class="form-control" />
                <span asp-validation-for="Cores" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Threads" class="control-label">Number Of Threads:</label>
                <input asp-for="Threads" class="form-control" />
                <span asp-validation-for="Threads" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BaseClock" class="control-label">Base Clock(In GHz):</label>
                <input asp-for="BaseClock" class="form-control" />
                <span asp-validation-for="BaseClock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BoostClock" class="control-label">Max Boost Clock(In GHz):</label>
                <input asp-for="BoostClock" class="form-control" />
                <span asp-validation-for="BoostClock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="SocketType">Socket:</label>
                <select id="SocketType" name="SocketType">
                    <option value="LGA1200">LGA1200</option>
                    <option value="LGA1700">LGA1700</option>
                    <option value="LGA1851">LGA1851</option>
                    <option value="LGA1150">LGA1150</option>
                    <option value="LGA1151">LGA1151</option>
                    <option value="LGA1155">LGA1155</option>
                    <option value="LGA1156">LGA1156</option>
                    <option value="LGA2066">LGA2066</option>
                    <option value="LGA4677">LGA4677</option>
                    <option value="STRx4">STRx4</option>
                    <option value="STR4">STR4</option>
                    <option value="STR5">STR5</option>
                    <option value="AM4">AM4</option>
                    <option value="AM5">AM5</option>
                </select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">Has Integrated Graphics
                    <input class="form-check-input" asp-for="IntegratedGraphics" /> 
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Price(In ₪)</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">Image URL</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<a asp-controller="Products"
   asp-action="Index"
   class="hero-btn">
    Back To Product List
</a>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
