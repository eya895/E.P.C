<!DOCTYPE html>
<html lang="en">
<head>
    <!-- ... (Head section remains the same) ... -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E.P.C</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/E.P.C.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">E.P.C</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <!-- 👇 START: Add the Bootstrap Dropdown Menu here 👇 -->
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Products
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="AIOs" asp-action="Index">All-In-One cooling Systems</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Cases" asp-action="Index">PC Cases</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="CPUs" asp-action="Index">Central-Proccessing-Units</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="CPUFans" asp-action="Index">CPU cooler</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Fans" asp-action="Index">Case Fans</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="GPUs" asp-action="Index">Graphic-Proccessign-Units</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="MotherBoards" asp-action="Index">Mother-Boards</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="PSUs" asp-action="Index">Power-Supply-Units</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="RAMs" asp-action="Index">RAM kits</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Storages" asp-action="Index">Storage Units</a></li>
                                <li><hr class="dropdown-divider"></li> <!-- Optional: adds a horizontal line -->
                                <li><a class="dropdown-item" asp-area="" asp-controller="Products" asp-action="Index">All Products</a></li>
                            </ul>
                        </li>
                        <!-- 👆 END: Bootstrap Dropdown Menu 👆 -->

                        <li class="nav-item">
                            <!-- Note: I moved the original 'Products' link inside the dropdown menu above, but kept this as an example of another nav item -->
                            @* <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="Index">Products</a> *@
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <!-- ... (Footer section remains the same) ... -->
        <div class="container">
            &copy; 2025 - E.P.C - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
